#!/usr/bin/env bash
# This script loops from 1 to 10 and displays bad luck for 4th iteration, good luck for 8th iteration, and Best School for other iterations
counter=1
while [ $counter -le 10 ]
do
    if [ $counter -eq 4 ]
    then
        echo "bad luck"
    elif [ $counter -eq 8 ]
    then
        echo "good luck"
    else
        echo "Best School"
    fi
    ((counter++))
done
